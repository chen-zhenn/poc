{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parser": ["@typescript-eslint/parser", "@babel/parser"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "node"
  ],
  "rules": {
    "node/no-unsupported-features/es-syntax": "error",
    "no-unused-vars": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
  }
}
